---
import { Icon } from 'astro-icon';
const date = new Date();
const year = date.getFullYear();
const currentPath = Astro.url.pathname;
---

<footer
	class={`flex justify-center py-2 gap-2 w-full mx-auto items-center ${
		currentPath === '/' ? 'fixed bottom-0 z-10 text-zinc-100' : 'static'
	}`}
>
	<a
		class='font-bold text-red-600 dark:text-cyan-400'
		href='https://clips.twitch.tv/SmokyPoisedGooseDxAbomb-lZ99mx0sGMLWptYq?ab_channel=mantarraya'
		rel='noreferrer'
		target='_blank'
	>
		Mirato
	</a>
	{year}&copy;
	<a href='https://twitch.tv/mirato123' rel='noreferrer' target='_blank' class='w-4'>
		<i class='text-purple-500'>
			<Icon name='ri:twitch-fill' />
		</i>
	</a>
</footer>
