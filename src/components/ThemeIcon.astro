---
import { Icon } from 'astro-icon';
---

<li
	id='themeToggle'
	class='px-4 py-0 cursor-pointer'
	data-theme-toggle
	aria-label='toggle theme'
	transition:name='page header'
	transition:persist
>
	<Icon
		name='ic:round-wb-sunny'
		class='text-red-400 hover:text-red-500 hidden transition-all dark:block w-[18px] hover:rotate-45'
	/>
	<Icon name='bi:moon-stars-fill' class='text-cyan-600 hover:text-cyan-400 block transition-all dark:hidden w-[18px]' />
</li>
